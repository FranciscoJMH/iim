<h1>Detalle De Compra</h1>
<h2>Folio: <%= @buy.id %></h2>
<h2>Obra: <%= @buy.project.name %></h2>

<% if @buy.articles.any? %>
  <h2>Articulos</h2>
  <div class="row">
    <div class="container-fluid m-2">
      <div>
        <div class="well">
          <div class="table-responsive">
            <table class="table">
              <thead>
              <tr>
                <th>Cantidad</th>
                <th>Unidad</th>
                <th>No.</th>
                <th>P.U.</th>
                <th>Importe</th>
                <th colspan="3"></th>
              </tr>
              </thead>

              <tbody>
              <% @buy.buy_articles.each do |buy_article| %>
                <tr>
                  <td><%= buy_article.quantity %></td>
                  <td><%= buy_article.article.unit %></td>
                  <td><%= buy_article.article.name %></td>
                  <td><%= buy_article.article.price %></td>
                  <td><%= (buy_article.quantity * buy_article.article.price).round(2) %></td>
                  <td>
                    <%= link_to buy_article do %>
                      <i class="bi bi-eye"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to edit_buy_article_path(buy_article) do %>
                      <i class="bi bi-pencil-square"></i>
                    <% end %>
                  </td>

                  <td>

                    <%= link_to buy_article, method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Estas seguro que quieres eliminarlo?'} do %>
                      <i class="bi bi-trash-fill"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>

  </div>
<% end %>
<div class="row">
  <div class="container-fluid mb-2">
    <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      Agregar Artículo
    </button>
    <div class="collapse" id="collapseExample">
      <div class="well">
        <%= form_with(model: @buy_article, local: true) do |form| %>
          <% if @buy_article.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(incoming.errors.count, "error") %> prohibited this incoming from being saved:</h2>

              <ul>
                <% @buy_article.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= form.label :article %>
            <%= form.collection_select(:article_id, Article.all, :id, :name, { prompt: 'Seleccione Articulo'}, { class: 'form-control' }) %>
          </div>

          <div class="field">
            <%= form.label :quantity %>
            <%= form.text_field :quantity, class: 'form-control' %>
          </div>
          <br>
          <%= form.hidden_field :buy_id, value: @buy.id %>
          <br>
          <div class="actions">
            <%= form.submit "Guardar" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

<h3>Iva <%= @buy.iva %> %: <%= @iva.round(2) %></h3>
<h3>Total: <%= @total %></h3>
<h3>Solicitó: <%= current_user.name %></h3>
<div>
  <%= link_to "Editar", edit_buy_path(@buy) %> |
  <%= link_to "Atras", buys_path %>

  <%= button_to "Eliminar", @buy, method: :delete %>
</div>ap
