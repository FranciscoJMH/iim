<p style="color: green"><%= notice %></p>
<h1>Compras</h1>

<table class="table">
  <thead>
  <tr>
    <th>Folio</th>

    <th>Iva</th>
    <th>Total</th>
    <th>Obra</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @buys.each do |buy| %>
    <tr>
      <td><%= buy.id %></td>
      <td><%= buy.iva %></td>
      <td><%= buy.total %></td>
      <td><%= buy.project.name %></td>
      <td><%= link_to 'Ver', buy %></td>
      <td><%= link_to 'Editar', edit_buy_path(buy) %></td>
      <td><%= link_to 'Eliminar', buy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Compra', new_buy_path, class: 'btn btn-primary' %>