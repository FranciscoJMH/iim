<section class="container">
  <div class="box">
  <div class="d-flex justify-content-between align-items-center">
    <%= link_to machineries_path, class: "btn btn-link" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="38" height="38" fill="currentColor" class="bi bi-backspace" viewBox="0 0 16 16">
        <path d="M5.83 5.146a.5.5 0 0 0 0 .708L7.975 8l-2.147 2.146a.5.5 0 0 0 .707.708l2.147-2.147 2.146 2.147a.5.5 0 0 0 .707-.708L9.39 8l2.146-2.146a.5.5 0 0 0-.707-.708L8.683 7.293 6.536 5.146a.5.5 0 0 0-.707 0z"/>
        <path d="M13.683 1a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-7.08a2 2 0 0 1-1.519-.698L.241 8.65a1 1 0 0 1 0-1.302L5.084 1.7A2 2 0 0 1 6.603 1h7.08zm-7.08 1a1 1 0 0 0-.76.35L1 8l4.844 5.65a1 1 0 0 0 .759.35h7.08a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1h-7.08z"/>
      </svg>
    <% end %>
    <h1 class="mb-4 text-left">Maquinarias de <%= @enterprise.name %></h1>
  </div>

    <table class="table table-striped table-hover">
      <thead>
       <tr>
          <th>Numero</th>
          <th>Codigo</th>
          <th>Tipo</th>
          <th>Características Generales</th>
          <th>Costo +IVA</th>
          <th>Flete</th>
          <th>Fecha de Inicio</th>
          <th>Fecha de Renovación</th>
          <th>Nota</th>
          <th>Proveedor</th>
          <th>Empresa</th>
          <th>Dias de Diferencia</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @machineries.each do |machinery| %>
          <tr>
            <td><%= machinery.number %></td>
            <td><%= machinery.code %></td>
            <td><%= machinery.machine_type %></td>
            <td><%= machinery.characteristics %></td>
            <td><%= machinery.cost_iva %></td>
            <td><%= machinery.freight %></td>
            <td class="date-column"><%= machinery.init_date %></td>
            <td><%= machinery.renovation_date %></td>
            <td><%= machinery.note %></td>
            <td><%= machinery.provider.name %></td>
            <td><%= machinery.enterprise.name %></td>
            <td><%= machinery.days_difference %></td>
            <td>
              <%= link_to edit_machinery_path(machinery) do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                              <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                              <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                </svg>
              <% end %>
            </td>
            <td>
              <%= link_to machinery, method: :delete, data: { turbo_method: :delete, turbo_confirm: '¿Estás seguro que quieres eliminar esta maquinaria?' } do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                </svg>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to new_machinery_path do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
              <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
              <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
      </svg>
    <% end %>
  </div>
</section>

<style>
  .container {
    position: relative;
  }
  .date-column {
    width: 120px
  }
  .container .box {
    padding: 1rem;
    background-color: rgba(227, 227, 227, 0.62);
    border: 1px solid rgba(255, 255, 255, 0.222);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: .7rem;
    transition: all ease .3s;
    flex-direction: column;
    justify-content: space-between;
    box-shadow: 0px 0px 20px 1px rgba(114, 0, 0, 0.25);
    border: 1px solid rgba(255, 255, 255, 0.454);
  }
</style>
